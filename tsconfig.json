{
    "compilerOptions": {
        "allowUnreachableCode": true,
        "allowUnusedLabels": false, 
        "alwaysStrict": false, 
        "baseUrl": ".", 
        "experimentalDecorators": true, 
        "sourceMap": true,
        "module": "ESNext",
        "noImplicitAny": false, 
        "removeComments": true,
        "types": [ 
            "node", 
        ],
        "target": "ESNext", 
        "outDir": "./dist",
        "declaration": true, 
        "declarationDir": "./dist/types", 
        "allowJs": true, 
        "lib": [ 
            "es5",
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}